<% include nav.ejs %>
<div class="row"></div>
<div class="row">
    <div class="col l4"></div>
    <div class="col s12 l4">
    <div class="card">
        <form action="/reg" method="POST">
            <div class="card-content">
            <h4 style="color: #faae29; padding-bottom:10px;">Student Registration</h4>
                    <div class="input-field">
                      <input name="uid" value="ARHN" id="uid" type="text" class="validate" required>
                      <label class="active" for="uid">Aaorhan ID</label>
                    </div>
                    <div class="input-field">
                      <input  value="" id="t1" name="student_name" type="text" class="validate" required>
                      <label class="active" for="t1">Student Name</label>
                    </div>
                
                    <div class="input-field">
                    <select name="gender">
                      <option value="" disabled selected></option>
                      <option value="1">Male</option>
                      <option value="2">Female</option>
                    </select>
                    <label>Gender</label>
                    </div>
                
                    <div class="input-field">
                    <select name="category">
                      <option value="" disabled selected></option>
                      <option value="1">Junior</option>
                      <option value="2">Senior</option>
                    </select>
                    <label>Category</label>
                    </div>
                
                    <div class="input-field">
                    <select name="school">
                        <option value="" disabled selected></option>
                        <% for(var i=0;i<Object.keys(schools).length;i++) { %>
                        <option><%= schools[i] %></option>
                        <% }%>
                    </select>
                    <label>School</label>
                    </div>
            </div>
            <div class="card-action">
            <button class="btn waves-effect waves-light" type="submit" name="action" onclick="Materialize.toast('I am a toast', 4000)">Submit
                <i class="material-icons right">send</i>
            </button>
            </div>
        </form>
    </div>
</div>
</div>

<%include foot.ejs %>
